{
  "name": "@kevinmarrec/vite-plugin-dark-mode",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "bun@1.2.21",
  "description": "Vite plugin to set initial color scheme based on user preferences.",
  "author": "Kevin Marrec <kevin@marrec.io>",
  "license": "MIT",
  "homepage": "https://github.com/kevinmarrec/vite-plugin-dark-mode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinmarrec/vite-plugin-dark-mode.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "dark-mode"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "check": "bun run check:unused && bun run check:eslint && bun run check:types",
    "check:eslint": "eslint . --cache",
    "check:types": "tsc --noEmit",
    "check:unused": "knip -n",
    "lint": "bun run check:eslint",
    "lint:inspect": "bunx @eslint/config-inspector",
    "release": "bumpp",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "vite": ">=7.0.0"
  },
  "devDependencies": {
    "@kevinmarrec/eslint-config": "^1.0.0",
    "@kevinmarrec/tsconfig": "^1.0.0",
    "@types/bun": "^1.2.21",
    "@vitest/coverage-v8": "^3.2.4",
    "bumpp": "^10.2.3",
    "eslint": "^9.34.0",
    "knip": "^5.63.0",
    "taze": "^19.3.0",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
